{
    "usuario":{
        "nombre":{
            "type":"String",
            "required":"true"
        },
        "email":{
            "type":"String",
            "required":"true"
        },
        "password":{
            "type":"String",
            "required":"true"
        },
        "rol":{
            "type":"String",
            "enum":["user","admin"]
        }
    },

    "categoria":{
        "name":{
            "type":"String",
            "enum":["padel","futbol"]
        },
        "descripcion":{
            "type":"String",
            "required":"true"
        }
    },

    "cancha":{
        "precio":{
            "type":"Number",
            "required":"true"
        },
        "descripcion":{
            "type":"Number",
            "required":"true"
        },
        "categoria":{
            "type":"Schema.ObjectId",
            "ref":"categoria"
        }
    },

    "club":{
        "nombre":{
            "type":"String",
            "required":"true"
        },
        "direccion":{
            "type":"String",
            "required":"true"    
        },
        "canchas":{
            "type":"Schema.ObjectId",
            "ref":"cancha"
        }
    },

    "insumo":{
        "nombre":{
            "type":"String",
            "required":"true"
        },
        "valor":{
            "type":"Number",
            "required":"true"
        },
        "categoria":{
            "type":"Schema.ObjectId",
            "ref":"categoria"
        }
    },

    "reserva":{
        "fecha":{
            "type":"Date",
            "required":"true"
        },
        "hora":{
            "type":"Date",
            "required":"true"
        },
        "cancha":{
            "type":["Schema.ObjectId"],
            "ref":"cancha"
        },
        "usuario":{
            "type":"Schema.ObjectId",
            "ref":"usuario"
        }   
    }

}