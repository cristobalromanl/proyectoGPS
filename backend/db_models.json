{
    "usuario":{
        "nombre":{
            "type":"String",
            "required":"true"
        },
        "email":{
            "type":"String",
            "required":"true"
        },
        "rol":{
            "type":"String",
            "enum":["user","admin"]
        }
    },
    "categoria":{
        "name":{
            "type":"String",
            "enum":["padel","futbol","tenis"]
        },
        "descripcion":{
            "type":"String",
            "required":"true"
        }
    },
    "cancha":{
        "precio":{
            "type":"Number",
            "required":"true"
        },
        "descripcion":{
            "type":"Number",
            "required":"true"
        },
        "categoria":{
            "type":"Schema.ObjectId",
            "ref":"categoria"
        }
    },
    "reserva":{
        "fecha":{
            "type":"Date",
            "required":"true"
        },
        "hora":{
            "type":"Date",
            "required":"true"
        },
        "estado":{
            "type":"String",
            "enum":["disponible","ocupado"]
        },
        "cancha":{
            "type":["Schema.ObjectId"],
            "ref":"cancha"
        }

    }
}